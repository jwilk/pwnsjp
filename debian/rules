#!/usr/bin/make -f

export DH_OPTIONS

configure:

build: build-arch build-indep

build-arch:
	$(MAKE) K_DATA_PATH=/usr/share/pwnsjp/slo.win all doc/pwnsjp.1 doc/pwnsjpi.1

build-indep: slo.win

clean:
	dh_testdir
	dh_testroot
	-$(MAKE) clean
	dh_clean 

install: install-indep install-arch
install-indep:
	dh_testdir
	dh_testroot
	dh_clean -k -i 
	dh_installdirs -i usr/share/pwnsjp/
	dh_install -i slo.win usr/share/pwnsjp/

install-arch:
	dh_testdir
	dh_testroot
	dh_clean -k -s 
	dh_install -s pwnsjp usr/bin/
	dh_link -s usr/bin/pwnsjp usr/bin/pwnsjpi
	dh_installman -s $(wildcard doc/*.[0-9])

binary-common:
	dh_testdir
	dh_testroot
	dh_installchangelogs 
	dh_installdocs doc/README
	dh_strip
	dh_compress 
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary-indep: build-indep install-indep
	$(MAKE) -f debian/rules DH_OPTIONS=-i binary-common

binary-arch: build-arch install-arch
	$(MAKE) -f debian/rules DH_OPTIONS=-s binary-common

binary: binary-arch binary-indep
.PHONY: build clean binary-indep binary-arch binary install install-indep install-arch configure

#!/usr/bin/perl
use strict;
use warnings;
use File::Temp qw();

my $use_konwert = 0;

my $tmpfh = new File::Temp();

print <<EOF
#ifndef CMAP_USASCII_H
#define CMAP_USASCII_H

static const char* rev_usascii[0xe0] = { "\\xa0",
EOF
;

print $tmpfh '<html><body>' unless $use_konwert;
foreach (0xa1 .. 0x17f)
{ 
  print $tmpfh "&#$_;\n"; 
  print $tmpfh '<br />' unless $use_konwert
}
print $tmpfh '</body></html>' unless $use_konwert;

if ($use_konwert)
 { open CO, '-|', "konwert html-ascii <$tmpfh 2>/dev/null"; }
else
 { open CO, '-|', "links -stdin -dump -dump-charset US-ASCII <$tmpfh 2>/dev/null"; }

my $s='';
while (<CO>)
{
  chop;
  s/"/\\"/; 
  s/^ *(.*)$/"$1", /;
  $s .= $_;
}
$s =~ s/, $//;

print <<EOF
$s };

#endif
EOF
;

close $tmpfh; 


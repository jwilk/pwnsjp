#!/usr/bin/perl
use strict;
use File::Temp qw(tempfile);

my $use_konwert = 0;

my ($tmpfd, $tmpfname) = tempfile();

print <<EOF
#ifndef CMAP_USASCII_H
#define CMAP_USASCII_H

static const char* rev_usascii[0xe0] = { "\\xa0",
EOF
;

print $tmpfd '<html><body>' unless $use_konwert;
foreach (0xa1 .. 0x17f)
{ 
  print $tmpfd "&#$_;\n"; 
  print $tmpfd '<br />' unless $use_konwert
}
print $tmpfd '</body></html>' unless $use_konwert;

if ($use_konwert)
 { open CO, '-|', "konwert html-ascii < $tmpfname 2>/dev/null"; }
else
 { open CO, '-|', "links -stdin -dump < $tmpfname 2>/dev/null"; }

my $s='';
while (<CO>)
{
  chop;
  s/"/\\"/; 
  s/^ *(.*)$/"\1", /;
  $s .= $_;
}
$s =~ s/, $//;

print <<EOF
$s };

#endif
EOF
;

close $tmpfd; 


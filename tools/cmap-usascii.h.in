use strict;
use warnings;
use File::Temp qw();

my $tmpfh = File::Temp->new();

print <<'EOF'
#ifndef CMAP_USASCII_H
#define CMAP_USASCII_H

static const char* rev_usascii[0xe0] = { "\xa0",
EOF
;

print $tmpfh '<html><body>';
foreach (0xa1 .. 0x17f)
{
  print $tmpfh "&#$_;\n";
  print $tmpfh '<br />';
}
print $tmpfh '</body></html>';

my @links_args = ('-dump', '-dump-charset', 'US-ASCII', $tmpfh);
open CO, '-|', 'links', @links_args or
open CO, '-|', 'elinks', @links_args or
die;

my $s='';
while (<CO>)
{
  chop;
  s/"/\\"/;
  s/^ *(.*)$/"$1", /;
  $s .= $_;
}
$s =~ s/, $//;

print <<"EOF"
$s };

#endif
EOF
;

close $tmpfh;


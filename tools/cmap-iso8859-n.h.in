use strict;
use warnings;

my $n = shift;

print <<EOF
#ifndef CMAP_ISO8859_${n}_H
#define CMAP_ISO8859_${n}_H

static const char rev_iso8859${n}[0xe0] = "\\
EOF
;

my %s;
$s{$_} = 0 foreach (0xa0 .. 0x17f);

while (<>)
{
  next unless m'^<U([0-9A-F]{4})> *\/(x[0-9a-f]{2})';
  my $iso = hex $2;
  my $uni = hex $1;
  $s{$uni} = $iso;
}
printf '\x%02x', $s{$_} foreach (0xa0 .. 0x17f);
print <<EOF
\\
";

#endif
EOF
;


use strict;
use warnings;

print <<EOF
#include <wchar.h>

#ifndef ENTITY_H
#define ENTITY_H

struct entity
{
  char *name;
  wchar_t *values;
  char *str;
};

static const struct entity entity_list[] =
{
EOF
;
while (<STDIN>)
{
  next if /^%/;
  next if /^\s*$/;
  chop;
  my ($name, $values, $string) = split /\t/;
  $values =~ s/(^|[+])/\\u/g;
  $values =~ s/\\u(00[0-7][0-9a-f])/chr(hex $1)/ge;
  print qq(  { .name = "$name", .values = L"$values", .str = $string },\n);
}
print <<EOF
  { .name = NULL, .values = NULL, .str = NULL }
};

#endif
EOF
;


<refsynopsisdiv>
	<cmdsynopsis>
		<command>&p;</command>
		<group choice='opt'>
			<arg choice='plain'><option>--deep</option></arg>
			<arg choice='plain'><option>-d</option></arg>
		</group>
		<group choice='opt'>
